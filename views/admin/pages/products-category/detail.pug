extends ../../layouts/default.pug 

block main 

  if (data.title)
    h1(class="mb-4") #{data.title}

  if (data.parent_id == '')
    h1(class="mb-4") Danh mục cha: #{data.title}
  else if (records.length > 0)
    each record in records
      if (record.id == data.parent_id)
        h1(class="mb-4") Danh mục cha: #{record.title}

  if (data.thumbnail)
    div(class="mb-4")
      img(
        src=data.thumbnail 
        style="width: 100px"
      )

  if (data.status)
    div(class="mb-4")
      span Trạng thái: 
      if (data.status === "active")
        span(class="badge badge-success") Hoạt động
      else if (data.status === "inactive")
        span(class="badge badge-danger") Dừng hoạt động 

  if (data.position)
    div(class="mb-4") Vị trí: <b>#{data.position}</b>
 
  if (data.description)
    div(class="mb-4 textarea-mce") !{data.description} 
    //- chuyển #{} thành !{} để hiển thị html, vì chúng lưu mã html

  a( 
    href=`${prefixAdmin}/products-category/edit/${data.id}`
    class="btn btn-warning btn-sm"
    ) Chỉnh sửa

  script(src="admin/js/product-category.js")