extends ../../layouts/default
include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/alert.pug
include ../../mixins/sort.pug
include ../../mixins/moment.pug

block main
  if (role.permissions.includes("articles_view"))
    +alert-success(5000)

    h1 Danh sách bài viết

    .card.mb-3 
      .card-header Bộ lọc và Tìm kiếm 
      .card-body 
        .row
          .col-6
            +filter-status(filterStatus)
          .col-6
            +search(keyword)

    .card.mb-3
      .card-header Sắp xếp bài viết
      .card-body
        .row
          .col-4 
            +sort(6)

    .card.mb-3 
      .card-header Danh sách 
      .card-body
        .row 
          .col-8 
            if (role.permissions.includes("articles_edit"))
              +form-change-multi(`${prefixAdmin}/articles/change-multi?_method=PATCH`)
          .col-4 
            if (role.permissions.includes("articles_create"))
              a( 
                href=`${prefixAdmin}/articles/create`
                class="btn btn-outline-success"
              ) + Thêm mới

          table(
            class="table table-hover table-sm"
            checkbox-multi
          )
            thead 
              tr
                th
                  input(type="checkbox" name="checkall")
                th STT 
                th Hình ảnh 
                th Tiêu đề
                th Vị trí
                th Trạng thái
                th Người tạo
                th Người cập nhật
                th Hành động

            tbody 
              each item, index in products
                tr
                  td 
                    input(
                      type="checkbox"
                      name="id"
                      value=item.id
                      )
                  td #{(pagination.limitItems)*(pagination.currentPage - 1) + (index + 1)}
                  td 
                    img(src=item.thumbnail, alt=item.title,
                    width="100px"
                    height="auto"
                    )

                  td #{item.title}
                  td 
                    input(
                      type="number"
                      value=item.position
                      style="width:60px"
                      min="1"
                      name="position"
                    )
                  td
                    if (role.permissions.includes("articles_edit"))
                      if (item.status == "active")
                          a(
                            href="javascript:;"
                            data-status=item.status
                            data-id=item.id
                            button-change-status
                            class="badge badge-success" 
                          ) Hoạt động 
                      else 
                          a(
                            href="javascript:;"
                            data-status=item.status
                            data-id=item.id
                            button-change-status
                            class="badge badge-danger"  
                          ) Dừng hoạt động
                  td 
                    p #{item.accountFullName}
                    p 
                      +formatDate(item.createdBy.createdAt)
                  td 
                    - const updatedBy = item.updatedBy.slice(-1)[0];
                    if (updatedBy)
                      p #{updatedBy.accountFullName}
                      p 
                        +formatDateTime(updatedBy.updatedAt)
                  td
                    if (item.deletedBy.deletedAt == null)
                      a(
                        href=`${prefixAdmin}/articles/detail/${item.id}`
                        class="btn btn-secondary btn-sm"
                        ) Chi tiết
                      if (role.permissions.includes("articles_edit"))
                        a(
                          href=`${prefixAdmin}/articles/edit/${item.id}`
                          class="btn btn-warning btn-sm ml-1"
                          ) Sửa
                      if (role.permissions.includes("articles_delete"))
                        button(
                          class="btn btn-danger btn-sm ml-1"
                          button-delete
                          data-id = item.id
                          ) Xóa
                    else
                      if (role.permissions.includes("articles_delete"))
                        button(
                          class="btn btn-success btn-sm"
                          button-restore
                          data-id = item.id
                        ) Khôi phục

    +pagination(pagination)

    //- có 2 cách để gửi dữ liệu lên server: form hoặc API
    form(
      action=""
      method="POST"
      id="form-change-status"
      data-path=`${prefixAdmin}/articles/change-status`
    )


    form(
      action=""
      method="POST"
      id="form-delete-item"
      data-path=`${prefixAdmin}/articles/delete`
    )


    form(
      action=""
      method="POST"
      id="form-restore-item"
      data-path=`${prefixAdmin}/articles/restore`
    )

    script(src="/admin/js/article.js")
  else 
    h1 Bạn không có quyền truy cập trang này!